<%= form_with url: pagenate_albums_path,method: :get,local: true do |f| %>
  <%= f.text_field :offset,placeholder: "オフセット" %>
  <%= f.text_field :limit,placeholder: "リミット" %>
  <%= f.submit '検索' %>
<% end %>

<div calss="album_boxs"></div>
<% @albums.each do | album | %>
  <div calss="album_box">
    <p><%= album["comment"] %></p>
    <%= image_tag "#{album["image_url"]}" %>
  </div>
<% end %>
