.wrapper
  .wrapper_inner
    .inner_title
      =link_to "料理記録アルバム",root_path

    -# アルバム検索バー
    .inner_search_bar
      .search_bar_title レシピの種類を検索できます
      = form_with url: search_type_albums_path,method: :get,local: true do |f|
        =f.select :type,[["主菜","main_dish"],["副菜","side_dish"],["スープ","soup"]],include_blank: "選択してください"
        = f.submit '検索'
    .inner_search_bar
      .search_bar_title キーワード検索
      = form_with url: search_word_albums_path,method: :get,local: true do |f|
        = f.text_field :word,placeholder: "テキストを入力"
        = f.submit '検索'

    -# ページネーション
    = render partial: "pagenate",locals: {albums: @albums}

    -# SNSシェアアイコン
    .inner_data_left
      = link_to "https://twitter.com/share?url=#{request.url}/&text=私の料理記録アルバムです！", title: 'Twitter', target: '_blank' do
        = fa_icon "twitter-square"
        %span シェアする

    -# 現在の表示件数
    .inner_data_right
      %span #{@albums.size}
      件表示

    -# アルバム一覧
    - if @albums.present?
      .album_boxs
        - @albums.each do | album |
          .album_box
            .album_data= album[:recorded_at]
            -# 画像をクリックするとレシピ詳細ページへ遷移
            = link_to albums_path do
              = image_tag "#{album[:image_url]}",class: "album_image"
            .album_comment= album[:comment]
    - else
      .no_albums_message 該当する投稿はありません。
    
    -# ページネーション
    = render partial: "pagenate",locals: {albums: @albums}

    = link_to "トップページへ戻る",root_path,class: "inner_data_right"